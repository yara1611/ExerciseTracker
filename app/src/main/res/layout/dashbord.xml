<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->

    <!-- Container for Main Content -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/text_dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to FitForma"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Buttons to Navigate to Different Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_create_routine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Routine" />

        </LinearLayout>

        <!-- RecyclerView to Display Training Routines or Recent Workouts -->

        <Button
            android:id="@+id/exercises_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercises" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/Pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/MusicFragmentContainer"
            android:name="com.example.excercisetrackerapp.MusicFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
